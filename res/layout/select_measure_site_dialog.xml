<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
  <ListView android:id="@+id/sites_list"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:layout_weight="4"
    	android:cacheColorHint="#00000000">
    	
    	<!-- android:layout_weight="4"
    	    	 android:background="@android:color/white"-->
    	
  </ListView>
  <RelativeLayout
  		android:layout_weight="1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<Button android:id="@+id/button_select_site_ok"
  			android:layout_alignParentRight="true"
  			android:layout_width="wrap_content"
  			android:layout_height="wrap_content"
  			android:text="@string/ok">
  		</Button>
  		<Button android:id="@+id/button_no_site_back"
			android:layout_toLeftOf="@id/button_select_site_ok"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/button_back"></Button>
  </RelativeLayout>
</LinearLayout>
